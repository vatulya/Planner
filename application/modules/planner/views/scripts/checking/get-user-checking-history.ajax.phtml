<div class="checking-history-header">
    Check IN/OUT for: "<span><?php echo $this->date; ?></span>"
</div>

<?php if ( ! empty($this->checkins)): ?>
    <table class="table table-bordered table-striped table-small-td">
        <thead>
        <tr>
            <th>
                Check IN
            </th>
            <th>
                Check OUT
            </th>
            <th>
                Overtime
            </th>
            <?php if ($this->isAdmin): ?>
            <th>
                Approve
            </th>
            <?php endif; ?>
        </tr>
        </thead>
        <tbody>
        <?php foreach ($this->checkins as $checkin): ?>
            <?php $overtime = ''; ?>
            <tr>
                <td>
                    <?php echo (string)$checkin['check_in']; ?>
                </td>
                <td>
                    <?php echo (string)$checkin['check_out']; ?>
                </td>
                <td>
                    <?php echo $overtime; ?>
                </td>
                <?php if ($this->isAdmin): ?>
                <td>
                    <input type="checkbox" class="approve-overtime" checked="checked" data-checkin-id="<?php echo $checkin['id']; ?>" />
                </td>
                <?php endif; ?>
            </tr>
        <?php endforeach;?>
        <tr></tr>
        </tbody>
    </table>
<?php else: ?>
    <div class="checking-history-header">
        No checkins in this day.
    </div>
<?php endif; ?>